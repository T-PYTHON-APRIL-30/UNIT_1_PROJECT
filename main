# import
from restaurant import Restaurant
from cfonts import render, say
import menu

print(render('welcome to the restaurant', colors=['red', 'yellow'], align='center'))

restaurant = Restaurant()

# the main list
while True:
    print("\nmain list\n")
    print("select: \n1: place an order \n2: view orders \n3: sort the menu \n4: exit")
    choice = input("enter the number: ")
    if choice == "1":
        restaurant.take_order()
    elif choice == "2":
        restaurant.view_orders()
    elif choice == "3":
        restaurant.sorted_menu()
    elif choice == "4":
        break
    else:
        print("* enter valid number *")